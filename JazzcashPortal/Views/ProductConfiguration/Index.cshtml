@model JazzcashPortal.Models.Setups.ProductConfiguration
@{
    Layout = "_Layout";
}
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<div class="right_col" role="main">
    <div class="col-md-12 col-sm-12">
        <div class="bg-white p-3">

            <div class="d-flex justify-content-between align-items-center mb-3" style="padding: 5px;">
                <h2 style="color: #3b5167;"><small>Product Configuration</small></h2>

                <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#productConfigModal">
                    <i class="bi bi-plus-lg"></i> Add Product Config
                </button>
            </div>

            <!-- Table section (always visible) -->

            <div class="card-box table-responsive">

                <table id="tblProductConfiguration" class="table table-striped table-bordered dt-responsive" cellspacing="0" width="100%" style="text-align: center;">
                    <thead style="background-color: #3b5167; color: #fff;">
                    </thead>
                </table>
            </div>

            <!-- Bootstrap Modal for Create Form -->
            <div class="modal fade" id="productConfigModal" tabindex="-1" aria-labelledby="productConfigModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-lg modal-dialog-centered">
                    <div class="modal-content">
                        <form id="productConfigSetup">
                            <div class="modal-header" style="background-color: #3b5167;">
                                <h5 class="modal-title text-white" id="productConfigModalLabel">Add Product Config</h5>
                                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>

                            <div class="modal-body">
                                <div class="row">

                                    <div class="col-sm-6 col-lg-4 col-md-4">
                                        <label asp-for="PRODUCT_NAME">Institution Name:</label>
                                        <div class="form-group">
                                            <input type="text" asp-for="PRODUCT_NAME" class="form-control" placeholder="Enter Product Name" />
                                            <span asp-validation-for="PRODUCT_NAME" class="text-danger"></span>
                                            <input type="hidden" asp-for="PRODUCT_ID" class="form-control" />
                                        </div>
                                    </div>

                                    <div class="col-sm-6 col-lg-4 col-md-4">
                                        <label asp-for="SUMCOVERED">Sum Covered:</label>
                                        <div class="form-group">
                                            <input type="number" asp-for="SUMCOVERED" class="form-control" placeholder="Enter Sum Covered" />
                                            <span asp-validation-for="SUMCOVERED" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="col-sm-6 col-lg-4 col-md-4">
                                        <label asp-for="NET_CONTRIBUTION">Net Contribution:</label>
                                        <div class="form-group">
                                            <input type="number" asp-for="NET_CONTRIBUTION" class="form-control" placeholder="Enter Net Contribution" />
                                            <span asp-validation-for="NET_CONTRIBUTION" class="text-danger"></span>
                                        </div>
                                    </div>

                                </div>
                            </div>

                            <div class="modal-footer">

                                <div class="row w-100">
                                    <div class="col-lg-12 col-md-6 col-sm-12" id="divSave_ProductConfig">
                                        <button type="submit" id="btnSave_ProductConfig" class="btn btn-success w-100">Save</button>
                                    </div>
                                    <div class="col-lg-6 col-md-6 col-sm-6" id="divDelete_ProductConfig" style="display: none;">
                                        <button type="button" id="btnDelete_ProductConfig" class="btn btn-danger w-100" style="display: none;">Delete</button>
                                    </div>
                                </div>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
<script src="~/js/product-configuration.js"></script>

<script type="text/javascript">

    $(document).ready(function () {

    });
</script>