@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Login | Investment Management System (IMS)</title>
    <!-- Bootstrap 5 CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Toastr -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />
    <style>
        body {
            min-height: 100vh;
            background: url('/assets/img/bg/bg_login.jpg') no-repeat center center fixed;
            background-size: cover;
        }

        .login-card {
            background: rgba(255,255,255,0.92);
            border-radius: 1.5rem;
            box-shadow: 0 4px 32px 0 rgba(0,0,0,0.14);
            padding: 2.5rem 2.2rem;
        }

        .Jazzcash-logo {
            width: 90px;
            height: auto;
            margin-bottom: 0.5rem;
        }

        .brand-title {
            font-weight: 700;
            color: #17375e;
            letter-spacing: 1px;
            font-size: 2rem;
        }

        .subtitle {
            color: #567;
            font-size: 1.1rem;
        }

        #loading {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(255,255,255,0.7);
            z-index: 2000;
            text-align: center;
        }

            #loading > div {
                position: absolute;
                top: 50%;
                left: 50%;
                transform: translate(-50%,-50%);
            }
    </style>
</head>
<body>
    <div class="container d-flex align-items-center justify-content-center min-vh-100">
        <div class="col-md-6 col-lg-5 col-xl-4 mx-auto">
            <div class="login-card text-center">
                <!-- Logo: Scales of justice, with IMS initials -->
                <img src="https://static.vecteezy.com/system/resources/thumbnails/025/143/590/small_2x/justice-for-all-logo-png.png" alt="Jazzcash Logo" class="Jazzcash-logo mb-2" />
                <div class="brand-title mb-1">Jazzcash Portal</div>
                <div class="subtitle mb-4">Sign in to continue to Jazzcash Portal</div>
                <!-- Login Form -->
                <form id="loginForm" autocomplete="off">
                    <div class="mb-3 text-start">
                        <label for="Username" class="form-label">Username</label>
                        <input type="text" name="Username" id="Username" class="form-control" placeholder="Enter username" autocomplete="username" required />
                    </div>
                    <div class="mb-3 text-start">
                        <label for="Password" class="form-label">Password</label>
                        <div class="input-group">
                            <input type="password" class="form-control" id="Password" name="Password" placeholder="Password" autocomplete="current-password" required />
                            <button class="btn btn-outline-secondary" type="button" id="togglePassword" tabindex="-1">
                                <i class="bi bi-eye" id="eyeOpen"></i>
                                <i class="bi bi-eye-slash d-none" id="eyeClosed"></i>
                            </button>
                        </div>
                    </div>
                    <div class="d-flex justify-content-between mb-3">
                        <div class="form-check">
                            <input class="form-check-input" id="basic-checkbox" type="checkbox" checked="checked" />
                            <label class="form-check-label" for="basic-checkbox">Remember me</label>
                        </div>
                        <a class="fw-semibold small" href="/Account/ForgotPassword">Forgot Password?</a>
                    </div>
                    <button type="submit" class="btn btn-primary w-100 mb-2" id="btnSubmit">Sign In</button>
                </form>
                <div class="mt-4">
                    <small class="text-muted">© 2025 Jazzcash Portal</small>
                </div>
            </div>
        </div>
    </div>
    <!-- Loader -->
    <div id="loading">
        <div>
            <div class="spinner-border text-primary" role="status"></div>
            <div>Loading...</div>
        </div>
    </div>

    <!-- Bootstrap JS & Toastr & jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <!-- Bootstrap Icons CDN -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

    <script>
        function showLoader() { $("#loading").show(); }
        function hideLoader() { $("#loading").hide(); }
        function SuccessNotify(msg) { toastr.success(msg); }
        function ErrorNotify(msg) { toastr.error(msg); }

        $(document).ready(function () {
            // Password toggle
            $('#togglePassword').on('click', function () {
                var passInput = $('#Password');
                var isPass = passInput.attr('type') === 'password';
                passInput.attr('type', isPass ? 'text' : 'password');
                $('#eyeOpen').toggleClass('d-none', !isPass);
                $('#eyeClosed').toggleClass('d-none', isPass);
            });

            // Handle login form submit
            $('#loginForm').on('submit', function (e) {
                e.preventDefault();

                var apiUrlLogin ='/Account/LoginPost';
                var data = {
                    Username: $('#Username').val(),
                    Password: $('#Password').val()
                };

                showLoader();
                $.ajax({
                    url: apiUrlLogin,
                    data: JSON.stringify(data),
                    type: 'POST',
                    contentType: 'application/json',
                    success: function (response) {
                        hideLoader();
                        if (response && response.status === "Success") {
                            SuccessNotify(response.message);
                            setTimeout(function () {
                                window.location.href = '../HomePolicy/Index';
                            }, 1000);
                        } else {
                            ErrorNotify(response.message);
                        }
                    },
                    error: function (xhr) {
                        hideLoader();
                        if (xhr.status === 401) {
                            ErrorNotify('Invalid username or password.');
                        } else {
                            ErrorNotify('An unexpected error occurred.');
                        }
                    }
                });
            });
        });
    </script>
</body>
</html>